<div class="container">
	<table class="table table-hover">
				<thread>
						<tr>
								<th>Customer Number</th>
								<th>Customer Name</th>
								<th>Address</th>
								<th>Delivery Address</th>
						</tr>
				</thread>
				<tbody>
							<tr>
									<td><%= @customer.number%></td>
									<td><%= @customer.name%></td>
									<td><%= @customer.address %></td>
									<td><%= @customer.delivery_address %></td>
							</tr>
				</tbody>
			</table>
    <%= link_to 'Edit', edit_customer_path(@customer), class: "btn btn-primary" %>
    <%= link_to 'Delete', @customer, class: "btn btn-danger", onclick: "confirm()", method: :Delete%>
</div>
<script>
	function confirm() {
		alert("Are you sure?");
	}
</script>