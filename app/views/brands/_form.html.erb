<div class="container">
	<%= form_with model: @brand do |f| %>
		<div class="form-group">
			<%= f.label :name, "Name:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :name, placeholder: "Enter Name", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :customer_id, "Customer Name:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.collection_select :customer_id, Customer.all,:id,:name,{prompt: "Select Customer"}, {class: "form-control"} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.button :save,class: "btn btn-default btn-primary" %>
		</div>
	<% end %>
</div>