<div class="container">
	<%= form_with model: @producer do |f| %>
		<div class="form-group">
				<%= f.label :number, "Number:", class: "col-md-4 control-label" %>
				<div class="col-md-8">
					<%= f.number_field :number, min: 0, placeholder: "Number",  class: "form-control" %>
				</div>
		</div>
		<div class="form-group">
			<%= f.label :name, "Name:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :name, placeholder: "Enter Name", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :short_name, "Short Name:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :short_name, placeholder: "Enter Short Name", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :address, "Address:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.text_field :address, placeholder: "Enter Address", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :bonus, "Bonus:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.number_field :bonus, min: 0,step: 0.01, placeholder: "Enter Bonus",  class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.button :save,class: "btn btn-default btn-primary" %>
		</div>
	<% end %>
</div>