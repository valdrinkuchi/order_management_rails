<div class="container">
	<h4>Production</h4>
	<br>
	<%= link_to 'New Production', new_production_path, class: "btn btn-primary" %>
	<br>
	<br>
    <table class="table table-hover">
			<thread>
					<tr>
							<th>Order</th>
							<th>Customer</th>
							<th>Producer</th>
							<th>Load Count</th>
							<th>Load Date</th>
							<th>Price</th>
					</tr>
			</thread>
			<tbody>
					<% @productions.each do |production|%>
						<tr>
								<td><%= link_to production.order.number, production %></td>
								<td><%= production.order.brand.customer.name %></td>
								<td><%= production.producer.name %></td>
								<td><%= production.load_count %></td>
								<td><%= production.load_date %></td>
								<td><%= production.price %></td>
						</tr>
					<%end%>
			</tbody>
    </table>
</div>