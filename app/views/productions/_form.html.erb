<div class="container">
	<%= form_with model: @production do |f| %>
		<div class="form-group">
			<%= f.label :order_id, "Order:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.collection_select :order_id, Order.where(in_production:false),:id,:number,{prompt: "Select Order"}, {class: "form-control"} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :producer_id, "Producer:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.collection_select :producer_id, Producer.all,:id,:name,{prompt: "Select Producer"}, {class: "form-control"} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :load_count, "Count:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.number_field :load_count, min: 0,step: 1, placeholder: "Enter Count",  class: "form-control" %>
			</div>
		</div>
			<div class="form-group">
			<%= f.label :load_date, "Load Date:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.date_field :load_date,placeholder: "Enter Load Date",class: "form-control", :id => "datepicker"%>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :price, "Price:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.number_field :price, min: 0,step: 0.01, placeholder: "Enter Price",  class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :bonus, "Bonus:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.number_field :bonus, min: 0,step: 0.01, placeholder: "Enter Bonus",  class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.button :save,class: "btn btn-default btn-primary" %>
		</div>
	<% end %>
</div>